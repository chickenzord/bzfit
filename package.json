{
  "name": "bzfit",
  "version": "0.1.0",
  "description": "Self-hosted calorie tracking application",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @bzfit/server dev",
    "dev:server": "pnpm --filter @bzfit/server dev",
    "dev:app": "pnpm --filter @bzfit/app dev",
    "build": "pnpm --filter @bzfit/server build",
    "build:server": "pnpm --filter @bzfit/server build",
    "start:prod": "node packages/server/dist/main.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy",
    "test": "pnpm --filter @bzfit/server test",
    "test:watch": "pnpm --filter @bzfit/server test:watch",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"packages/**/*.{ts,tsx,css}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^8.57.1",
    "prettier": "^3.8.1",
    "prisma": "^6.19.2",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "bcrypt",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
