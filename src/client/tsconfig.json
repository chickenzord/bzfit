{
  "extends": "../../tsconfig.json", // Corrected path
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true, // Changed from false to true to match root tsconfig, better for React
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // This is the crucial line for JSX support
    "baseUrl": "./", // Relative to this tsconfig.json
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../../src/shared/*"] // Added path for shared
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.js", "vite.config.ts"]
}
